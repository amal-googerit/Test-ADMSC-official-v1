---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.tsx';
import TestButton from '../components/TestButton.tsx';
---

<Layout title="React + Astro Production App">
  <Hero 
    title="React + Astro" 
    subtitle="Production-ready setup with TypeScript, ESLint, Prettier & Testing"
    client:load
  >
    <div class="space-y-4">
      <TestButton 
        label="Counter" 
        initialCount={0}
        client:load
      />
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="https://docs.astro.build" 
          class="px-6 py-3 bg-white text-blue-600 rounded-lg hover:bg-gray-100 transition-colors font-semibold"
          target="_blank"
          rel="noopener noreferrer"
        >
          Astro Docs
        </a>
        <a 
          href="https://reactjs.org" 
          class="px-6 py-3 bg-transparent border-2 border-white text-white rounded-lg hover:bg-white hover:text-blue-600 transition-colors font-semibold"
          target="_blank"
          rel="noopener noreferrer"
        >
          React Docs
        </a>
      </div>
    </div>
  </Hero>
</Layout>

<style>
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fade-in 0.8s ease-out forwards;
  }

  .animation-delay-300 {
    animation-delay: 0.3s;
    opacity: 0;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
    opacity: 0;
  }
</style>